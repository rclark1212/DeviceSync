<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- do NOT change ordinals below - must keep mapping -->
    <integer name="header_devices">0</integer>
    <integer name="header_device_apps">1</integer>
    <!-- <integer name="header_flagged_apps">2</integer> -->
    <integer name="header_missing_apps">2</integer>
    <integer name="header_unique_apps">3</integer>
    <integer name="header_superset_apps">4</integer>
    <integer name="header_remote_apps">5</integer>

    <!-- note - both of the arrays below need to be kept in sync.
         Do NOT change the ordinals in the function array - describes the function of the row.
         An example of changing UI so it shows My Apps instead of Local Apps, just change header_name Local Apps to My Apps.
         A further example of swapping order between Missing Apps/Flagged apps is to move Flagged Apps below Missing Apps
         in the header_names array below *AND* moving the 2 below the 3 in the header_function array -->

    <!-- do change oder below to change menu ordering in the app -->
    <string-array name="header_names">
        <item>@string/array_devices</item>
        <item>@string/array_localapps</item>
        <item>@string/array_missingapps</item>
        <item>@string/array_uniqueapps</item>
        <item>@string/array_superset</item>
        <item>@string/array_remotes</item>
    </string-array>
    <!-- <item>Flagged Apps (all)</item> NOTE - remove flagged apps from v1.0 of the app -->

    <!-- do change order below to change menu ordering in the app -->
    <integer-array name="header_function">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
    </integer-array>
    <!-- <item>2</item> -->

    <!-- do change order below to change menu ordering in the app -->
    <string-array name="header_function_str">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
    </string-array>
    <!-- <item>2</item> -->

    <!-- other arrays for use with preference file -->
    <string-array name="notification_option_names">
        <item>@string/array_missing</item>
        <item>@string/array_flagged</item>
    </string-array>

    <string-array name="notification_option_values">
        <item>@string/array_missing</item>
        <item>@string/array_flagged</item>
    </string-array>
</resources>
