<resources>

    <style name="Theme.AppCompat.DeviceSync" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- specify theme colors -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <!-- make buttons flat -->
        <!-- <item name="android:buttonStyle">@style/PhoneButton</item> -->

        <!-- transition styles -->
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/details_window_return_transition</item>

    </style>

    <!-- <item name="android:textStyle">bold</item> -->
    <!-- <item name="android:background">@color/theme_primary</item> -->
    <style name="PhoneDetailButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/btn_flat_padding</item>
        <item name="android:paddingEnd">@dimen/btn_flat_padding</item>
        <item name="android:layout_marginStart">@dimen/btn_flat_margin</item>
        <item name="android:layout_marginEnd">@dimen/btn_flat_margin</item>
        <item name="android:radius">@dimen/btn_flat_radius</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.DeviceSync.Detail" parent="Theme.AppCompat.DeviceSync">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <!-- main activity toolbar style -->
    <style name="ToolbarMain" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- main activity toolbar style -->
    <style name="ToolbarDetail" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:foreground">?android:textColorPrimaryInverse</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>
